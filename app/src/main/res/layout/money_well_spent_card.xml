<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    tools:layout_editor_absoluteY="81dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:text="name userd donations to buy something"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:text="info"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/cardDescription"
            app:layout_constraintEnd_toStartOf="@+id/donateButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/eventCard" />

        <Button
            android:id="@+id/donateButton"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:text="donate"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/cardDescription"
            app:layout_constraintEnd_toStartOf="@+id/applaudButton"
            app:layout_constraintStart_toEndOf="@+id/infoButton"
            app:layout_constraintBottom_toBottomOf="@+id/eventCard" />

        <Button
            android:id="@+id/applaudButton"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1dp"
            android:text="applaud"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/cardDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/donateButton"
            app:layout_constraintBottom_toBottomOf="@+id/eventCard" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>